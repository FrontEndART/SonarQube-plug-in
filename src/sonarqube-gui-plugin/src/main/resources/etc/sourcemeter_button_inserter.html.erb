<% content_for :script do %>
    <link rel="stylesheet" type="text/css" href=<%= "#{url_for_static(:plugin => 'SourceMeterGUI', :path => 'css/buttons.css')}" %>>
    <script src=<%= "#{url_for_static(:plugin => 'SourceMeterGUI', :path => 'js/drilldown.js')}" %>></script>
    <script>
      $j(document).ready(function() {
        <% if params[:sm_resource] %>
          createSMEvents('<%= params[:sm_resource] %>');
        <% else %>  
          createSMEvents();
        <% end %>
        setTimeout(function() {
        <% if params[:highlighted_line] %>
          highlightLines(<%= params[:highlighted_line] %>, <%= params[:highlighted_line] %>);
        <% elsif params[:bline] && params[:eline] %>
          highlightLines(<%= params[:bline] %>, <%= params[:eline] %>);
        <% end %>
        }, 2000);
      });
    </script>
<% end %>